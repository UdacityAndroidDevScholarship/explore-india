<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageView_places_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:scaleType="centerCrop"
        tools:src="@drawable/image2" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/imageView_places_city"
        android:layout_alignEnd="@id/imageView_places_city"
        android:layout_alignLeft="@id/imageView_places_city"
        android:layout_alignRight="@id/imageView_places_city"
        android:layout_alignStart="@id/imageView_places_city"
        android:background="#AA000000"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_places_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:maxEms="8"
            android:padding="4dp"
            android:textColor="@color/whiteColor"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="Sabarmati Riverfront" />

        <ImageButton
            android:id="@+id/button_like_places_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="4dp"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/ic_favorite_gray_24dp" />

    </LinearLayout>

</RelativeLayout>