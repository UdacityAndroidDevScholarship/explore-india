<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_margin="10dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@id/liked_places_list_images"
            android:layout_width="match_parent"
            android:layout_height="195dp"
            android:layout_marginBottom="4dp"
            android:contentDescription="@string/liked_places_list_images"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/image1" />


        <ImageView
            android:id="@id/liked_places_img_background"
            android:layout_width="185dp"
            android:layout_height="match_parent"
            android:contentDescription="@string/liked_places_img_background"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="@id/liked_places_list_images"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintLeft_toLeftOf="@id/liked_places_list_images"
            app:layout_constraintRight_toRightOf="@id/liked_places_list_images"
            app:srcCompat="@drawable/background_image" />

        <TextView
            android:id="@id/liked_place_tv_name"
            android:layout_width="100dp"
            android:layout_height="15dp"
            android:layout_marginBottom="112dp"
            android:layout_marginLeft="220dp"
            android:layout_marginStart="220dp"
            android:text="@string/likde_place_tv_name"
            android:textColor="#FFF"
            app:layout_constraintBottom_toBottomOf="@id/liked_places_list_images"
            app:layout_constraintLeft_toLeftOf="@id/liked_places_list_images" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="84dp"
            android:layout_marginLeft="192dp"
            android:layout_marginStart="192dp"
            android:text="@string/liked_place_tv_like"
            android:textColor="#FFF"
            app:layout_constraintBottom_toBottomOf="@id/liked_places_list_images"
            app:layout_constraintLeft_toLeftOf="@id/liked_places_list_images" />

        <TextView
            android:id="@id/liked_place_tv_like"
            android:layout_width="68dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="84dp"
            android:layout_marginLeft="280dp"
            android:layout_marginStart="280dp"
            android:text=""
            android:textColor="#FFF"
            app:layout_constraintBottom_toBottomOf="@id/liked_places_list_images"
            app:layout_constraintLeft_toLeftOf="@id/liked_places_list_images" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="52dp"
            android:layout_marginLeft="192dp"
            android:layout_marginStart="192dp"
            android:text="@string/liked_place_tv_date"
            android:textColor="#FFF"
            app:layout_constraintBottom_toBottomOf="@id/liked_places_list_images"
            app:layout_constraintLeft_toLeftOf="@id/liked_places_list_images" />

        <TextView
            android:id="@id/liked_place_tv_date"
            android:layout_width="92dp"
            android:layout_height="22dp"
            android:layout_marginBottom="48dp"
            android:layout_marginLeft="240dp"
            android:layout_marginStart="240dp"
            android:text=""
            android:textColor="#FFF"
            app:layout_constraintBottom_toBottomOf="@id/liked_places_list_images"
            app:layout_constraintLeft_toLeftOf="@id/liked_places_list_images" />

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>