<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    card_view:cardUseCompatPadding="true"
    card_view:cardCornerRadius="8dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/my_location_img_places"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/app_name"
            android:scaleType="fitXY" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/gateway_of_india"
            android:scaleType="fitXY"
            android:tint="#81000000"
            android:background="#81000000"
            android:layout_alignParentBottom="true"
            android:padding="5dp">
            <TextView
                android:id="@+id/loaction_tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GateWay of India"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:layout_alignParentTop="true" />
            <TextView
                android:id="@+id/loaction_tv_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="600m"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:layout_below="@+id/loaction_tv_name" />

            <ImageView
                android:id="@+id/loaction_img_favorite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_action_favorite"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>