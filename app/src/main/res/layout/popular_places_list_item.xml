<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageView_popular_places_city"
        android:layout_width="140dp"
        android:layout_height="160dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="4dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:scaleType="centerCrop"
        tools:src="@drawable/image2" />

    <TextView
        android:id="@+id/textView_popular_places_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/imageView_popular_places_city"
        android:layout_alignEnd="@id/imageView_popular_places_city"
        android:layout_alignLeft="@id/imageView_popular_places_city"
        android:layout_alignRight="@id/imageView_popular_places_city"
        android:layout_alignStart="@id/imageView_popular_places_city"
        android:layout_margin="1dp"
        android:background="#AA000000"
        android:gravity="center"
        android:lines="2"
        android:maxEms="6"
        android:padding="4dp"
        android:textColor="@color/whiteColor"
        android:textSize="14sp"
        android:textStyle="bold"
        tools:text="Sabarmati Riverfront" />

</RelativeLayout>