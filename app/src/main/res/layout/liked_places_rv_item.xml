<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_marginTop="16dp"
    style="@style/CardViewStyle">

    <!-- Given suitable margin to CardView -->

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Place's title name -->

        <TextView
            android:id="@id/liked_list_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            app:layout_constraintBottom_toTopOf="@id/liked_list_img_places"
            app:layout_constraintEnd_toEndOf="@id/liked_list_img_places"
            app:layout_constraintStart_toStartOf="@id/liked_list_img_places"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="@string/place_title" />

        <!-- Liked place's image -->

        <ImageView
            android:id="@id/liked_list_img_places"
            android:contentDescription="@string/content_description_image"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/liked_list_tv_name"
            app:srcCompat="@drawable/liked_places_sample" />

        <!-- Dark background view for details -->

        <ImageView
            android:id="@+id/details_background"
            android:contentDescription="@string/content_description_dark_view"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="@id/liked_list_img_places"
            app:layout_constraintLeft_toLeftOf="@id/liked_list_img_places"
            app:layout_constraintRight_toRightOf="@id/liked_list_img_places"
            app:srcCompat="@drawable/details_background_view" />

        <!-- Total number of likes [LABEL] -->

        <TextView
            android:id="@+id/liked_list_tv_total_likes_label"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:gravity="center"
            android:text="@string/total_likes_label"
            android:textColor="@color/whiteColor"
            app:layout_constraintBottom_toBottomOf="@id/details_background"
            app:layout_constraintStart_toStartOf="@id/details_background"
            app:layout_constraintTop_toTopOf="@id/details_background" />

        <!-- Dummy data for Total number of likes -->

        <TextView
            android:id="@id/liked_list_tv_total_likes"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginStart="4dp"
            android:layout_marginLeft="4dp"
            android:gravity="center"
            android:textColor="@color/whiteColor"
            app:layout_constraintBottom_toBottomOf="@id/details_background"
            app:layout_constraintStart_toEndOf="@id/liked_list_tv_total_likes_label"
            app:layout_constraintTop_toTopOf="@id/details_background"
            tools:text="@string/total_likes" />

        <!-- Date [LABEL] -->

        <TextView
            android:id="@+id/liked_list_tv_date_label"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginEnd="4dp"
            android:layout_marginRight="4dp"
            android:gravity="center"
            android:text="@string/date_added_label"
            android:textColor="@color/whiteColor"
            app:layout_constraintBottom_toBottomOf="@id/details_background"
            app:layout_constraintEnd_toStartOf="@+id/liked_list_tv_date"
            app:layout_constraintTop_toTopOf="@id/details_background" />

        <!-- Dummy data for Date -->

        <TextView
            android:id="@id/liked_list_tv_date"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:gravity="center"
            android:textColor="@color/whiteColor"
            app:layout_constraintBottom_toBottomOf="@id/details_background"
            app:layout_constraintEnd_toEndOf="@+id/details_background"
            app:layout_constraintTop_toTopOf="@id/details_background"
            tools:text="@string/date_added" />

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>